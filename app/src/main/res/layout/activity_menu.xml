<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200"
    tools:context=".MenuActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_img_menu"
        android:visibility="visible" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/menu_IMG_carlogo"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:layout_weight="1"
        android:scaleX="2"
        android:scaleY="2"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:id="@+id/menu_LAYOUT_buttonslayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu_IMG_carlogo"
        android:layout_marginHorizontal="90dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/menu_BTN_slowgame"
            style="@style/Widget.Material3.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="4dp"
            android:onClick="startSlowGame"
            android:padding="16dp"
            android:text="Slow Game"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/menu_BTN_fastgame"
            style="@style/Widget.Material3.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="4dp"
            android:onClick="startFastGame"
            android:padding="16dp"
            android:text="Fast Game"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/menu_BTN_sensorgame"
            style="@style/Widget.Material3.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="4dp"
            android:onClick="startSensorGame"
            android:padding="16dp"
            android:text="Sensor Game"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/menu_BTN_records"
            style="@style/Widget.Material3.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="4dp"
            android:onClick="openRecords"
            android:padding="16dp"
            android:text="Records"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>


</RelativeLayout>